<%= turbo_frame_tag :new_signet_preview do %>
  <dialog id="modal-preview" class="modal modal-open" data-action="click->pr-signet-form#hidePreviewModal">
    <div class="modal-box w-11/12 max-w-5xl">
      <div class="modal-content">
        <% @pr_signet.gh_pull_requests.each do |pull_request| %>
          <%= render partial: 'pull_requests/pull_request', locals: { pull_request: pull_request } %>
        <% end %>
      </div>
    </div>
    <form method="dialog" class="modal-backdrop">
      <button>close</button>
    </form>
  </dialog>
<% end %>

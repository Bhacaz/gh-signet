<li class="card bg-base-100 mb-2">
  <div class="card-body p-3">
    <div class="flex items-center gap-3">
      <div class="flex-none">
        <% if status.conclusion == 'success' %>
          <span class="badge badge-success badge-sm">
            <i class="bi bi-check2"></i>
          </span>
        <% elsif status.conclusion == 'pending' %>
          <span class="badge badge-warning badge-sm">
            <i class="bi bi-circle-fill"></i>
          </span>
        <% else %>
          <span class="badge badge-error badge-sm">
            <i class="bi bi-x-lg"></i>
          </span>
        <% end %>
        <div class="avatar">
          <div class="w-10 rounded-full">
            <%= image_tag status.avatar_url, alt: "Avatar" %>
          </div>
        </div>
      </div>
      <div class="flex-1">
        <%= link_to status.name, status.target_url, class: "link link-primary font-medium", target: '_blank' %>
        <% if status.description.present? %>
          <p class="text-sm text-opacity-80"><%= status.description %></p>
        <% end %>
      </div>
    </div>
  </div>
</li>

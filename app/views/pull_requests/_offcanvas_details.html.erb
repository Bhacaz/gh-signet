<%= turbo_frame_tag :pull_request_details_panel do %>
  <div data-controller="pull-requests-details">
    <div class="offcanvas offcanvas-end show" tabindex="-1" aria-labelledby="offcanvasRightLabel" aria-modal="true" role="dialog">
      <div class="offcanvas-header">
        <h6 class="offcanvas-title" id="offcanvasRightLabel"><%= @pull_request.title %></h6>
      </div>
      <div class="offcanvas-body">
        <p>
          <%= @pull_request.body %>
        </p>
      </div>
    </div>
    <div class="offcanvas-backdrop fade show" data-action="click->pull-requests-details#closeDetailsOffcanvas"></div>
  </div>
<% end %>
